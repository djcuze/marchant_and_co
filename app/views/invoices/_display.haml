%table
  %thead
    %th Description
    %th Category
    %th Quantity
    %th Unit Price
    %th Total
  %tbody
    - @invoice.invoice_items.each do |item|
      %tr
        %td= item.inventory_item.description
        %td= item.inventory_item.category.name
        %td= item.quantity
        %td= number_to_currency item.cost
        %td= number_to_currency item.calculated_total