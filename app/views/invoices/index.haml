%table
  %thead
    %th Id
    %th Supplier
    %th Total
    %th Delete
    %th Show?
  %tbody
    - @invoices.each do |invoice|
      %tr
        %td= invoice.id
        %td= invoice.supplier.name
        %td= number_to_currency invoice.total
        %td= link_to 'Delete', invoice, method: :delete, data: { confirm: 'Are you sure you want to delete this?' }
        %td= link_to 'show', invoice
= link_to 'New', new_invoice_path